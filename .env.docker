# Docker Environment Configuration
# This file contains environment variables for Docker Compose

# Application Configuration
APP_NAME=finance-tracker-backend
APP_VERSION=1.0.0

# Server Configuration
PORT=4000
NODE_ENV=production

# Google API Configuration
# Path to Google credentials file (inside container)
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/credentials.json

# Container Configuration
CONTAINER_NAME=finance-tracker-backend
CONTAINER_PORT=4000
HOST_PORT=4000

# Volume Configuration
CREDENTIALS_HOST_PATH=./credentials
CREDENTIALS_CONTAINER_PATH=/app/credentials

# Network Configuration
NETWORK_NAME=finance-tracker-network 